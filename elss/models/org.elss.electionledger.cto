namespace org.elss.electionledger

import org.elss.common.*

asset ElectionLedger identified by key {
  o String key
  o School school
  o DateTime expiry
  o VoterInfo[] info optional
}

concept VoterInfo {
  o String id
  o String name
  o School school
  o Contact contact
  o Attendance attendance
}

enum Attendance {
  o ATTENDED
  o NOT
}

// Transaction and Event

transaction createElectionLedger{
  o School school
  o DateTime expiry
}

event ElectionLedgerCreated{
  o String key
}